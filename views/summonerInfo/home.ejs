<nav class="background-grey boarder">
    <a class="nav-margin" href="/profile/items">Favorite Items</a>
    <a class="nav-margin" href="/profile/summoners">Favorite Summoners</a>
    <a class="nav-margin" href="/profile">Back to  Profile</a>
</nav>


<div class="centered-in-column">
    <% if(data === []){ %>
        <p>Account has not played any ranked games this season</p>
    <% } else { %>

    <p class="title centered" ><%= data.summonerName %></p>

    <h4>Rank: <%= data.tier %> <%= data.rank %></h4>

    <p>Win Rate: <%= (Math.round(data.wins/(data.wins+data.losses)*100)/100) *100 %>%</p>

    <p>Total games: <%= data.wins + data.losses %></p>

    <% } %>

    <ul>
        <li>
            <form method="POST" action="/summoner-info/mastery">
                <input hidden type="text" name="name" value="<%= summoner.name %>">
                <input hidden type="text" name="code" value="<%= summoner.code %>">
                <input hidden type="text" name="puuid" value="<%= summoner.puuid %>">
                <input hidden type="text" name="profileIconId" value="<%= summoner.profileIconId %>">
                <input hidden type="text" name="summonerLevel" value="<%= summoner.summonerLevel %>">
                <input hidden type="text" name="userId" value="<%= summoner.userId %>">
                <button type="submit">Champion Mastery</button>
            </form>
        </li>
        <li>
            <form method="POST" action="/summoner-info/match-history">
                <input hidden type="text" name="name" value="<%= summoner.name %>">
                <input hidden type="text" name="code" value="<%= summoner.code %>">
                <input hidden type="text" name="puuid" value="<%= summoner.puuid %>">
                <input hidden type="text" name="profileIconId" value="<%= summoner.profileIconId %>">
                <input hidden type="text" name="summonerLevel" value="<%= summoner.summonerLevel %>">
                <input hidden type="text" name="userId" value="<%= summoner.userId %>">
                <button type="submit">Match History</button>
            </form>
        </li>

    </ul>

</div>